<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditActivity"
    android:id="@+id/MainScreen">

    <!-- 상단 메뉴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:paddingLeft="7dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_ios_white_18dp"
            android:onClick="onBackButtonClicked"
            android:paddingStart="7dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="VIEW"
            android:gravity="center"/>

        <!-- 저장 버튼 -->
        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_edit_white_18dp"
            android:onClick="onEditButtonClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/AlcName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="술이름"
            android:textSize="23dp"
            android:gravity="center_vertical"
            android:paddingLeft="9dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/AlcFood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="같이 먹은 안주"
                android:textSize="15dp"
                android:paddingLeft="9dp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:layout_margin="3dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/AlcCategory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:entries="@array/AlcCategory"
                    android:text="술의 종류"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/AlcDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="YYMMDD"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/AlcComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="top"
            android:background="@null"
            android:text="술 일기의 내용"
            android:padding="5dp"
            android:paddingStart="9dp"
            android:paddingLeft="9dp" />

    </LinearLayout>

</LinearLayout>